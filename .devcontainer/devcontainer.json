// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Eagle Labs Config Server",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "22"
		},
		"ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {},
		"./features/eagle-labs/gemini-cli": {}
	},
	// Set Claude Code configuration directory
	"containerEnv": {
		"CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
		"GEMINI_CONFIG_DIR": "/home/vscode/.gemini",
		// Point the compliance scripts to the sidecar service
		"POLICY_HOST": "http://policy-server:3000"
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [3000],
	"appPort": [ "3000:3000" ],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.claude /home/vscode/.config/gemini",
	"runArgs": [
        "--network=dev-network",
        "--name=policy-server"
    ],
	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"mounts": [
		// Persist Claude Code config (auth tokens, settings) in ~/.claude directory
		// Shared across all devcontainers for convenience with trusted repos
		"source=claude-code-config,target=/home/vscode/.claude,type=volume",
		// Persist Gemini CLI config (auth tokens, settings)
		"source=gemini-cli-config,target=/home/vscode/.gemini,type=volume"
	],
	"remoteUser": "vscode"
}
